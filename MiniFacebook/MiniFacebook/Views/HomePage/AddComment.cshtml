    <div class=" row " style="border-bottom:1px solid lightgray">
        <img src="~/Images/man58.png" class="circle img-fluid" style="margin-left:5%; margin-top:2%" />
        <div class="col-8">
            <p class="usr-name ml-2">Hazem Hammad</p>
