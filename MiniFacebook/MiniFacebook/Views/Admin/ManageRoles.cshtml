@model CreateRoleViewModel
@{
    ViewBag.Title = "Create New Role";
}
    <div class="row">
        <form class="mt-3">
            <div asp-validation-summary="All" class="text-danger">
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <input asp-for="Id" hidden class="form-control">
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="RoleName" class="form-control" placeholder="Name">
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
                <label asp-for="RoleDescription" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="RoleDescription" class="form-control" placeholder="Discription">
                    <span asp-validation-for="RoleDescription" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group ">
                <div class="col-sm-10">
                    <button type="button" class="btn btn-primary" id="btnAdd" onclick="return Add();">
                        Create Role
                    </button>
                    <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="Update();">Update Role</button>
                </div>
            </div>
        </form>

    </div>
<div class="row">
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Name
                </th>
                <th>
                    Description
                </th>

            </tr>
        </thead>
        <tbody class="tbody"></tbody>
    </table>
</div>
@section scripts{
    <script src="~/js/admin.js"></script>
}
