@model LoginViewModel
@{
    ViewBag.Title = "User Login";
}

<section>
    <div class="container my-5">
        <h2 class=" text-center h2 ">User Login</h2>
        <span class="border-bottom"></span>
        <div class="row mt-5">
            <div class="col-12 col-lg-6">
                <div class=" shadows border border-clrd">
                    <div class="card">
                        <h5 class="card-header text-center py-4">
                            <strong>Local Account Login</strong>
                        </h5>
                        <div class="card-body px-lg-4 ">
                            <form method="post">
                                <div class="row">
                                    <div class="form-group col-12 col-md-12">
                                        <input asp-for="Email" class="form-control" placeholder="Email" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-12 col-md-12">
                                        <input asp-for="Password" class="form-control" placeholder="Password" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-12 col-md-12">
                                        <div class="checkbox">
                                            <label asp-for="RememberMe">
                                                <input asp-for="RememberMe" />
                                                @Html.DisplayNameFor(m => m.RememberMe)
                                            </label>
                                        </div>
                                    </div>
                                    <div class="form-group col-12">
                                        <button type="submit" class="btn animated-button">Login</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-6 mt-3">
                <div class=" shadows border border-clrd">
                    <div class="card">
                        <h5 class="card-header text-center py-4">
                            <strong>External Login</strong>
                        </h5>
                        <div class="card-body px-lg-4 ">
                            <form method="post" asp-action="ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl">
                                <div>

                                    @foreach (var provider in Model.Externallogins)
                                    {
                                        <div class="row">
                                            <div class="col-12 my-4 text-center">
                                                <button type="submit" class="btn text-left" name="provider" value="@provider.Name">
                                                    <i class="icon-margin"></i> Login With @provider.DisplayName
                                                </button>
                                            </div>
                                        </div>

                                    }
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section scripts{
    <script src="~/js/site.js"></script>
}
